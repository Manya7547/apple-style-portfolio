---
interface Achievement {
  icon: string;
  number: string;
  label: string;
}

const achievements: Achievement[] = [
  {
    icon: "🚀",
    number: "50+",
    label: "Projects Completed",
  },
  {
    icon: "👥",
    number: "30+",
    label: "Happy Clients",
  },
  {
    icon: "⭐",
    number: "100+",
    label: "GitHub Stars",
  },
  {
    icon: "📚",
    number: "15+",
    label: "Tech Articles",
  },
];
---

<div
  class="bg-gradient-to-r from-gray-700 to-gray-900 rounded-3xl p-8 shadow-xl text-white"
>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
    {
      achievements.map((achievement) => (
        <div class="text-center">
          <span class="text-3xl mb-2 block">{achievement.icon}</span>
          <p class="text-4xl font-bold mb-1">{achievement.number}</p>
          <p class="text-gray-300 text-sm">{achievement.label}</p>
        </div>
      ))
    }
  </div>
</div>
