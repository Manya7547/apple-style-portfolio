---
import Scene3D from "./Scene3D";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-dark"
>
  <!-- Remove or comment out the Scene3D component if you don't want any 3D background -->
  <!-- <div class="absolute inset-0 z-0">
    <Scene3D client:load />
  </div> -->

  <div class="container mx-auto px-4 z-10">
    <div class="max-w-4xl mx-auto text-center">
      <div class="flex flex-col items-center mb-8 animate-fade-in">
        <div
          class="w-32 h-32 rounded-full border-4 border-gray-600 shadow-xl mb-6 overflow-hidden bg-gradient-to-br from-gray-700 to-gray-900"
        >
          <img
            src="https://res.cloudinary.com/dn6bopeje/image/upload/v1742075708/profile_ndvzfz.png"
            alt="Profile"
            class="w-full h-full object-cover"
          />
        </div>
        <h1 class="text-6xl font-bold mb-2 text-gray-100">Manya Sohal</h1>
        <h2 class="text-3xl text-gray-300 mb-6">Software Developer</h2>
      </div>
      <p class="text-xl text-gray-400 mb-8 animate-slide-up">
        Evolving as a Developer
      </p>
      <div
        class="flex gap-4 justify-center animate-slide-up"
        style="animation-delay: 200ms;"
      >
        <a
          href="/projects"
          class="bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700 transition-colors"
        >
          View My Work
        </a>
        <a
          href="mailto:manya7547@gmail.com"
          class="border border-gray-600 text-gray-300 px-6 py-3 rounded-full hover:bg-gray-700 transition-colors"
        >
          Get in Touch
        </a>
        <a
          href="https://drive.google.com/file/d/15FeC1V07OCLv6qb3fZqh17HPZ6JYDkMZ/view?usp=sharing"
          target="_blank"
          class="bg-gray-600 text-gray-300 px-6 py-3 rounded-full hover:bg-gray-700 transition-colors"
        >
          View My Resume
        </a>
      </div>
    </div>
  </div>
</section>
