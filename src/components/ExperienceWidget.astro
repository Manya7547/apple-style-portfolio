const education: Education[] = [
  {
    degree: "Master of Science in Computer Science",
    school: "Santa Clara University",
    period: "2022 - 2024",
    achievements: [
      "Active member of the Society of Women Engineers (SWE) and Rewriting The Code (RTC) communities.",
    ],
  },
  {
    degree:
      "Bachelor of Technology in Computer Science (Specialization in Big Data)",
    school: "University of Petroleum and Energy Studies",
    period: "2018 - 2022",
    achievements: [
      "Specialized in Big Data",
      "Member of ACM and Think Big Data communities.",
      "Part of the organizing team for the cultural fest and TED Talks.",
    ],
  },
