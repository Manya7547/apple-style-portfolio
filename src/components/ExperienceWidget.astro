---
interface Experience {
  title: string;
  company: string;
  period: string;
  description: string[];
  technologies: string[];
}

interface Education {
  degree: string;
  school: string;
  period: string;
  achievements: string[];
}

const experiences: Experience[] = [
  {
    title: "Software Engineer",
    company: "S&P Global",
    period: "2024 - Present",
    description: [
      "• Co-developed a real-time market analytics dashboard (Node.js, Express.js, TypeScript) with a cross-functional team of 5 engineers for visualizing stock market trends and KPIs.",
      "• Standardized RESTful APIs with Swagger-driven documentation, cutting cross-team integration delays by 20%.",
      "• Optimized PostgreSQL query performance, reducing average read latency by 25% for 500k+ monthly transactions",
      "• Secured access to sensitive data with OAuth2/RBAC, reducing unauthorized access incidents by 35% and passing GDPR audits with zero findings.",
      "• Reduced deployment time by 40% and environment mismatch bugs by 60% through dockerized CI/CD workflows.",
    ],
    technologies: ["Node.js", "Express.js", "TypeScript", "Docker"],
  },
  {
    title: "Software Developer",
    company: "Frugal Innovation Hub at Santa Clara University",
    period: "2023 - 2024",
    description: [
      "• Led design and development of a bilingual educational math app with intuitive Figma wireframes for Hispanic immigrant children.",
      "• Developed gamified learning features using Flutter and Dart with real-time feedback and multi-level engagement.",
      "• Integrated a Translation API with TensorFlow and optimized backend services with Firebase while leading Agile meetings.",
    ],
    technologies: ["Flutter", "Dart", "Figma", "TensorFlow", "Firebase"],
  },
  {
    title: "Software Developer",
    company: "Infosec Ventures",
    period: "2021 - 2022",
    description: [
      "• Migrated monolithic application to microservices architecture, reducing API latency by 40% and cutting production outages by 25%.",
      "• Automated 90% of cloud infrastructure provisioning, slashing environment setup time from 4 hours to 45 minutes using Terraform.",
      "• Optimized async task processing (Python asyncio + Azure Service Bus), decreasing background job execution time from 12s to 8s (35% faster).",
      "• Cut deployment failures by 60% by standardizing CI/CD pipelines (Azure DevOps/GitHub Actions) with automated rollback workflows.",
    ],
    technologies: ["Python", "FastAPI", "Azure Service Bus"],
