---

<div class="bg-dark/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold text-gray-300 mb-8">Experience</h3>
  <div class="space-y-12">
    {
      experiences.map((job) => (
        <div class="relative pl-8 border-l border-gray-600">
          <div class="absolute w-4 h-4 bg-dark rounded-full border-2 border-gray-600 -left-[9px] top-0" />
          <div class="mb-4">
            <h4 class="text-xl font-medium text-gray-300">{job.title}</h4>
            <div class="flex flex-wrap gap-2 items-center text-gray-400">
              <span>{job.company}</span>
              <span>•</span>
              <span>{job.period}</span>
            </div>
          </div>
          <ul class="space-y-2">
            {job.description.map((item) => (
              <li class="text-gray-400">{item}</li>
            ))}
          </ul>
          <div class="mt-4 flex flex-wrap gap-2">
            {job.technologies.map((tech) => (
              <span class="px-3 py-1 bg-gray-800 text-blue-400 rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>
