---
import { projects } from "../data/project";
import type { Project } from "../types/project";

const featuredProjects: Project[] = projects;
---

<div class="bg-dark/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <div class="md:flex justify-between items-center mb-6">
    <h3 class="text-2xl font-semibold text-gray-300 mb-6">Featured Projects</h3>
    <a
      href="/projects"
      class="text-gray-400 hover:text-gray-300 transition-colors text-sm"
    >
      View all {featuredProjects.length} projects â†’
    </a>
  </div>
  <div class="grid gap-6">
    {
      featuredProjects.slice(0, 3).map((project) => (
        <a
          key={project.id}
          href={project.demoUrl}
          className="block p-4 rounded-2xl hover:bg-dark/50 transition-all duration-300 group"
        >
          <div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
            <img
              src={project.image}
              alt={project.title}
              class="w-full sm:w-24 h-48 sm:h-24 rounded-xl object-cover"
            />
            <div class="flex-1">
              <h4 class="text-lg font-medium text-gray-300 mb-2 group-hover:text-blue-400 transition-colors">
                {project.title}
              </h4>
              <p class="text-gray-400 text-sm">{project.description}</p>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</div>
