---
interface Skill {
  name: string;
  level: "Expert" | "Advanced" | "Intermediate";
  icon: string;
}

const skills: Skill[] = [
  { name: "TypeScript", level: "Advanced", icon: "⚡" },
  { name: "Node.js & Express.js", level: "Advanced", icon: "📘" },
  { name: "PostgreSQL", level: "Advanced", icon: "⚛️" },
  { name: "React.js", level: "Intermediate", icon: "🟢" },
  { name: "Docker & CI/CD ", level: "Advanced", icon: "🐍" },
  { name: "Python & FastAPI", level: "Intermediate", icon: "🔵" },
  {
    name: "Cloud Infrastructure (Microsoft Azure, AWS, Kubernetes",
    level: "Intermediate",
    icon: "🟣",
  },
];

const levelColors = {
  Expert: "bg-blue-100 text-blue-700",
  Advanced: "bg-green-100 text-green-700",
  Intermediate: "bg-yellow-100 text-yellow-700",
};
---

<div class="bg-dark/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold mb-4 text-gray-100">Skills</h3>
  <div class="space-y-4">
    {
      skills.map((skill) => (
        <div class="flex items-center justify-between p-3 hover:bg-dark/50 rounded-xl transition-colors">
          <div class="flex items-center gap-3">
            <span class="text-xl">{skill.icon}</span>
            <span class="font-medium text-gray-100">{skill.name}</span>
          </div>
          <span
            class={`px-3 py-1 rounded-full text-sm font-medium ${levelColors[skill.level]}`}
          >
            {skill.level}
          </span>
        </div>
      ))
    }
  </div>
</div>
